<%= render 'user_profile' %>

<section id="post-details">
  <div class="box">
    <header class="box-header">
      <h1>Detalhes Post</h1>
    </header>
    <!--begin .post-details-->
    <div class="post-details">
      <div class="list-view ui-comments-list">
        <ul>
          <li>
            <div class="item-image usuario">
              <span class="item-image-wrap"><img width="40" height="40" src="/assets/user-chuck.jpg" /></span>
            </div>
            <div class="item-info">
              <div class="item-activity">
                <div class="user-name">
                  <a href="/profile">Chuck Norris</a>
                </div>
                <div class="user-comment">
                  <%= simple_format(@post.body) %>
                </div>
                <div class="item-actions">
                  <span class="timestamp first">1 hora atrás</span>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <div class="post-actions-row">
      <div class="post-actions">
        <span class="action-like">
          <a href="#">Curtir</a>
        </span>
        <span class="action-comment">
          <a href="#">Comentar</a>
        </span>
      </div>
      <div class="post-like-counter">
        <span class="count-likes">Renato Carvalho, Julio Protzek e Flavio Ludgero curtiram isso.</span>
      </div>
    </div>

    <div class="post-comments">
      <div class="list-view ui-comments-list">
        <ul>
          
          <% @comments.each do |comment| %>

          <li>
            <div class="item-image usuario">
              <span class="item-image-wrap"><img width="35" height="35" src="/assets/user-mclovin.jpg" /></span>
            </div>
            <div class="item-info">
              <div class="item-activity">
                <div class="user-name">
                  Mc Lovin
                </div>
                <div class="user-comment">
                  <%= simple_format(comment.body) %>
                </div>
                <div class="item-actions">
                  <span class="timestamp first"><%= time_ago_in_words(comment.created_at) %> atrás</span>
                </div>
              </div>
            </div>
          </li>

          <% end %>

        </ul>
      </div>
    </div>
    <!--end .post-comments--><!--begin .comment-form-->
    <div class="comment-form">
      <%= render 'comments/form' %>
    </div>
    <!--end .comment-form-->
  </div>
  <!--end .box-->
</section>
